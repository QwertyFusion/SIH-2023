<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginPageVM" type="com.sapplication.app.modules.loginpage.data.viewmodel.LoginPageVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumntopleft"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_200">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearLoginPage"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylegray_200">
            <ImageView android:gravity="start"
                android:id="@+id/imageTopLeft"
                android:layout_height="@dimen/_75pxv"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                imageRes="@{@drawable/img_topleft_cyan_402}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_topleft_cyan_402"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtWelcomeBack"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25pxh"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_marginTop="@dimen/_107pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{loginPageVM.loginPageModel.txtWelcomeBack}"
                style="@style/txtOpenSansromanbold18" tools:text="@string/lbl_welcome_back"/>
            <ImageView android:id="@+id/imageUserIcon"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_151pxh"
                android:layout_marginEnd="@dimen/_25pxh"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_marginTop="@dimen/_41pxv"
                android:layout_width="@dimen/_151pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_usericon"
                tools:ignore="ContentDescription" tools:src="@drawable/img_usericon"/>
            <EditText
                android:background="@drawable/rectangle_bg_white_a700_radius_5"
                android:ellipsize="end"
                android:hint="@string/msg_enter_your_emai"
                android:id="@+id/etTextFieldThree"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25pxh"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_marginTop="@dimen/_45pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_9pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_12pxv"
                android:singleLine="true"
                android:text="@={loginPageVM.loginPageModel.etTextFieldThreeValue}"
                android:textColorHint="@color/black_900_bf"
                style="@style/etSolidRounded" tools:ignore="Autofill"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtTextFieldFour"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25pxh"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_marginTop="@dimen/_30pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_9pxv"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_12pxv"
                android:singleLine="true"
                android:text="@{loginPageVM.loginPageModel.txtTextFieldFour}"
                style="@style/txtSolidRounded" tools:text="@string/lbl_enter_password"/>
            <FrameLayout android:gravity="start"
                android:id="@+id/frameStacklogin"
                android:layout_height="@dimen/_227pxv"
                android:layout_marginTop="@dimen/_85pxv" android:layout_width="match_parent">
                <FrameLayout android:id="@+id/frameStackbottomright"
                    android:layout_gravity="bottom|start"
                    android:layout_height="@dimen/_190pxv"
                    android:layout_marginTop="@dimen/_10pxv" android:layout_width="match_parent">
                    <ImageView android:id="@+id/imageBottomRight"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_190pxh"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        imageRes="@{@drawable/img_topleft_cyan_402}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_topleft_cyan_402"/>
                    <LinearLayout android:id="@+id/linearRegisterButton"
                        android:layout_gravity="top|start"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_48pxv"
                        android:layout_marginEnd="@dimen/_25pxh"
                        android:layout_marginStart="@dimen/_25pxh"
                        android:layout_marginTop="@dimen/_48pxv"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtConfirmation"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_weight="0.74"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{loginPageVM.loginPageModel.txtConfirmation}"
                            style="@style/txtOpenSansromanregular16" tools:text="@string/msg_do_not_have_an"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtRegister"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.26"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{loginPageVM.loginPageModel.txtRegister}"
                            style="@style/txtOpenSansromanbold16" tools:text="@string/lbl_register"/>
                    </LinearLayout>
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnLogin"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_18pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_login"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_1" tools:text="@string/lbl_login"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
